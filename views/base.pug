doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title ANNK | 
        -if(user)
            | #{`${user.name.split(" ")[0]}'s profile`}
    link(rel='shortcut icon' href='./src/images/AANk logo.jpg' type='image/x-icon')
    // Icons CDN
    script(type='module' src='https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js')
    script(nomodule='' src='https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js')
    // FONTS CDN
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,200;6..12,400;6..12,500;6..12,600;6..12,700;6..12,800;6..12,900;6..12,1000&display=swap' rel='stylesheet')
    // Custom CSS
    link(rel='stylesheet' href='/src/css/style.css')
    block script
    //- script(defer src="/src/js/profilePage.js") 
.main-wrapper
    // NavBar
    header.main-header
        .main-header-logo-box
            a.homepage-link(href=`/member/${_id}`)
                img(src='/src/images/annkLogo.jpeg' alt='ANNK Logo' srcset='')
                h3.annk-name ANNK
        .main-header-button-box
                -if(user)
                    a.btn.btn-login(href='/member/logout') Logout
                -else
                    a.btn.btn-signup(href='signup.html') Signup
                    a.btn.btn-login(href='/member/login') Login

    block content